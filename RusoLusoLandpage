        // Array of image URLs
        const images = [
            'file:///C:/Users/karlo/Pictures/Fotos%20presentation/grE9S-psrtzyopw25rzn6pk3igp2fj.HEIC',
            'file:///C:/Users/karlo/Pictures/Fotos%20presentation/NeS35-64x25w6dr3jahh5qsod34ldm.HEIC',
